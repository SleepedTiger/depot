<p id="notice"><%= notice %></p>

<h1>商品一覧</h1>

<table>
  <thead>
    <tr>
      <th>Product</th>
      <th>Cart</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @line_items.each do |line_item| %>
      <tr>
        <td><%= line_item.product_id %></td>
        <td><%= line_item.cart_id %></td>
        <td><%= link_to '参照', line_item %></td>
        <td><%= link_to '編集', edit_line_item_path(line_item) %></td>
        <td><%= link_to '削除', line_item, method: :delete, data: { confirm: '本当に良かと?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

