    <%= select_tag 'set_locale',
      options_for_select(LANGUAGES, I18n.locale.to_s),
      onchange: 'this.form.submit()' %>
    <%= submit_tag 'submit' %>
    <%= javascript_tag "$('.locale input').hide()" %>
  <% end %>
 -->    
    <%= image_tag("logo.png") %>
    <%= @page_title || t('.title') %>
  </div>
  <div id="columns">
    <div id="side">
      <div id="cart">
        <%= render @cart %>
      </div>

      <ul>
        <li><%= link_to '最初の画面', store_path %></li>
        <li><%= link_to '良くある質問', question_path %></li>
        <li><%= link_to 'お問い合わせ', contact_path %></li>
        <li><a><%= @time %></a></li>
      </ul>
      <% if session[:user_id] %>
        <ul>
            <li><%= link_to '注文', orders_path %></li>
            <li><%= link_to '商品', products_path %></li>
            <li><%= link_to '管理者', users_path %></li>
        </ul>
        <%= button_to '退出', logout_path, method: :delete %>
      <% end %>
    </div>
    <div id="main">
      <%= yield %>
    </div>
  </div>

</body>
</html>
