<h1>注文参照</h1>

<table>
  <thead>
    <tr>
      <th>お名前</th>
      <th>ご住所</th>
      <th>Email</th>
      <th>お支払方法</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.name %></td>
        <td><%= order.address %></td>
        <td><%= order.email %></td>
        <td><%= order.pay_type %></td>
        <td><%= link_to '参照', order %></td>
        <td><%= link_to '編集', edit_order_path(order) %></td>
        <td><%= link_to '削除', order, method: :delete, data: { confirm: '本当に良かと?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

