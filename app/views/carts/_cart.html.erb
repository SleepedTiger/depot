<% unless cart.line_items.empty? %>
<div class="cart_title">買い物籠</div>
<table>
  <%= render(cart.line_items) %>

  <tr class="total_line">
    <td colspan="2">合計</td>
    <td class="total_cell"><%= number_to_currency(cart.total_price) %></td>
  </tr>
</table>

<%= button_to('注文画面へ', new_order_path, method: :get) %>
<%= button_to "買い物籠を空にする", warning_path, :method => :get %>
<% end %>